@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "BlogASP.NET - Головна";
}

<!-- Main Content -->
<div class="container">
    <div class="row">
        <div class="col-lg-10 col-md-10 mx-auto">
            @{
                var createPost = Url.Action("Create", "Posts");
            }
            @if (User.Identity.IsAuthenticated)
            {
                <a href="@createPost" class="btn btn-light">Написати пост</a>
            }
            <span></span>
            @foreach (var item in Model)
            {
                <div class="post-preview">
                    @{
                        var pathURL = Url.Action("Show", "Posts") + "/" + item.Id;
                    }
                    <a href="@pathURL">
                        <h2 class="post-title">
                            @item.Title
                        </h2>
                        <br/>
                        @if (User.Identity.GetUserName().Equals(item.Author))
                        {
                            <p class="pull-right">
                                @{
                                    var edit = Url.Action("Edit", "Posts") + "/" + item.Id;
                                    var delete = Url.Action("Delete", "Posts");
                                }
                                <a type="button"
                                   class="btn btn-sm text-white btn-primary"
                                   href="@edit">
                                    <i class="fa fa-edit"></i>
                                    Редагувати
                                </a>

                                <a type="button"
                                   class="btn btn-sm text-white btn-danger"
                                   href="@delete">
                                    <i class="fa fa-trash"></i>
                                    Видалити
                                </a>
                            </p>
                        }
                        <img style="width: 100%; height: 300px;" src="@item.Imgurl" />
                        <h3 class="post-subtitle">
                            @item.Description
                        </h3>
                    </a>
                    <p class="post-meta">
                        <span><i class="fa fa-fw fa-eye"></i> @item.Seen</span>
                        <span><i class="fa fa-fw fa-thumbs-up"></i> @item.Likes</span>
                        <span><i class="fa fa-fw fa-thumbs-down"></i> @item.Dislikes</span>
                        <span><i class="fa fa-fw fa-comment"></i> 0</span>
                    </p>
                    <p class="post-meta">
                        Теги: @item.Tags
                    </p>
                    <p class="post-meta">
                        Написав:
                        <b>
                            <a href="">@item.Author</a>
                            <i>
                                27.01.2001
                            </i>
                        </b>
                    </p>
                </div>
                <br/>
                <hr>
            }

            <!-- Pager -->
            <div class="clearfix">
                <a class="btn btn-primary float-right" href="#">Older Posts &rarr;</a>
            </div>
        </div>
    </div>
</div>
