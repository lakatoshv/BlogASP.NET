@{
    ViewBag.Title = "BlogASP.NET - Головна";
}

<!-- Main Content -->
<div class="container">
    <div class="row">
        <div class="col-lg-10 col-md-10 mx-auto">
                <span></span>
                @foreach (var item in Model)
                {
                <div class="post-preview">
                    @{
                        var pathURL = Url.Action("Show", "Posts") + "/" + item.Id;
                    }
                    <a href="@pathURL">
                        <h2 class="post-title">
                            @item.Title
                        </h2>
                        <img style="width: 100%; height: 300px;" src="@item.Imgurl" />
                        <h3 class="post-subtitle">
                            @item.Description
                        </h3>
                    </a>
                    <p class="post-meta">
                        <span><i class="fa fa-fw fa-eye"></i> @item.Seen</span>
                        <span><i class="fa fa-fw fa-thumbs-up"></i> @item.Likes</span>
                        <span><i class="fa fa-fw fa-thumbs-down"></i> @item.Dislikes</span>
                        <span><i class="fa fa-fw fa-comment"></i> 0</span>
                    </p>
                    <p class="post-meta">
                        Теги: @item.Tags
                    </p>
                    <p class="post-meta">
                        Написав: <b>
                            <a href="">@item.Author</a><i>
                                27.01.2001
                            </i>
                        </b>
                    </p>
                </div>
                    <hr>
                }

            <!-- Pager -->
            <div class="clearfix">
                <a class="btn btn-primary float-right" href="#">Older Posts &rarr;</a>
            </div>
        </div>
    </div>
</div>
