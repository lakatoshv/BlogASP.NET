@model IList<Blog.Data.Models.Post>

<style>
    .sidebar-box {
        margin-bottom: 40px;
        padding: 0 25px;
        font-size: 15px;
        width: 100%;
    }

    .sidebar-box h3.sidebar-heading {
        font-size: 20px;
        font-weight: normal;
        margin-bottom: 30px;
    }

    /*media (max-width: 767.98px) {
    .sidebar-box {
        padding: 0;
    }
    }*/

    .block-21 .blog-img {
        display: block;
        height: 50px;
        width: 80px;
    }

    .block-21 .text {
        width: calc(100% - 100px);
    }

    .block-21 .text .heading {
        font-size: 16px;
    }

    .block-21 .text .heading a {
        color: #000000;
    }

    .block-21 .text .heading a:hover,
    .block-21 .text .heading a:active,
    .block-21 .text .heading a:focus {
        color: #0028ff;
    }

    .block-21 .text .meta>div {
        display: inline-block;
        font-size: 12px;
        margin-right: 5px;
    }

    .block-21 .text .meta>div a {
        color: gray;
    }
</style>

<div class="sidebar-box ftco-animate">
    <h3 class="sidebar-heading">Популярні пости</h3>
    @foreach (var post in Model)
    {
        <div class="block-21 mb-4 d-flex">
            <a class="blog-img mr-4" style="background-image: url(@post.ImageUrl)"></a>
            <div class="text">
                <h3 class="heading">
                    @{
                        var pathUrl = Url.Action("Show", "Posts") + "/" + post.Id;
                    }
                    <a href="@pathUrl">@post.Title</a>
                </h3>
                <div class="meta">
                    <div><a href="#"><span class="fa fa-calendar"></span> @post.CreatedAt</a></div>
                    <div>
                        @{ var authorPage = Url.Action("Details", "Profile") + "/" + post.Author.Profile.Id; }
                        <a routerLink="@authorPage">
                            <span class="fa fa-user"></span> @post.Author.FirstName @post.Author.LastName
                        </a>
                    </div>
                    <div><a href="#"><span class="fa fa-comment"></span> @post.Comments.Count</a></div>
                </div>
            </div>
        </div>
    }
</div>