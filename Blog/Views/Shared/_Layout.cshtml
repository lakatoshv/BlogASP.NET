</ul>
            </div>
        </div>
    </nav>
    <!-- Page Header -->
    <header class="masthead" style='background-image: url(@Url.Content("~/public/img/home-bg-v2.jpg")'>
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                    <div class="site-heading">
                        <h1>BlogASP.NET</h1>
                        <hr class="hr">
                        <span class="subheading">Цікавий блог про цікаве</span>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <div class="container body-content">
        @RenderBody()
    </div>
    <hr>

    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-10 col-md-12 mx-auto">
                    <ul class="socialIcons">
                        <li class="facebook">
                            <a href="#">
                                <i class="fa fa-fw fa-facebook"></i>Facebook
                            </a>
                        </li>
                        <li class="twitter">
                            <a href="#">
                                <i class="fa fa-fw fa-twitter"></i>Twitter
                            </a>
                        </li>
                        <li class="instagram">
                            <a href="#">
                                <i class="fa fa-fw fa-instagram"></i>Instagram
                            </a>
                        </li>
                        <li class="pinterest">
                            <a href="#">
                                <i class="fa fa-fw fa-pinterest-p"></i>Pinterest
