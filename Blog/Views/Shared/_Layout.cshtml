<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" type="image/gif/png/ico" href="~/public/blog.ico" />
    <!-- Bootstrap core CSS -->
    @Styles.Render("~/public/plugins/bootstrap/css/bootstrap.min.css")
    @Styles.Render("~/public/font-awesome/css/font-awesome.min.css")

    <!-- Custom styles for this template -->
    @Styles.Render("~/public/css/app.css")

    <link href='https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>
    @Styles.Render("~/public/css/clean-blog.min.css")

</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
        <div class="container">
            <img src="~/public/blog.ico" width="50px" height="50px">
            @Html.ActionLink("BlogASP.NET", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                Menu
                <i class="fa fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        @Html.ActionLink(
                            linkText: "Про нас",
                            actionName: "About",
                            controllerName: "Home",
                            routeValues: null,
                            htmlAttributes: new { @class = "nav-link" }
                        )
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink(
                            linkText: "Контакти",
                            actionName: "Contact",
                            controllerName: "Home",
                            routeValues: null,
                            htmlAttributes: new { @class = "nav-link" }
                        )
                    </li>
                    @if (!User.Identity.IsAuthenticated)
                    {
                    <li class="nav-item">
                        @Html.ActionLink(
                            linkText: "Ввійти",
                            actionName: "Login",
                            controllerName: "Account",
                            routeValues: null,
                            htmlAttributes: new { @class = "nav-link" }
                        )
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink(
                            linkText: "Зареєструватись",
                            actionName: "Register",
                            controllerName: "Account",
                            routeValues: null,
                            htmlAttributes: new { @class = "nav-link" }
                        )
                    </li>
                    }
                    else { 
                    <li class="nav-item"><a href="#" class="nav-link">@(HttpContext.Current.User.Identity.Name)</a></li>
                    <li class="nav-item">
                        @Html.ActionLink(
                            linkText: "Вийти",
                            actionName: "LogOut",
                            controllerName: "Account",
                            routeValues: null,
                            htmlAttributes: new { @class = "nav-link" }
                        )
                    </li>
                    }
