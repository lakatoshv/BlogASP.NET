@using Microsoft.AspNet.Identity
@model Blog.Models.Message
@{
    ViewBag.Title = "Contact";
}
@Styles.Render("~/public/css/post.css")
<section id="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h2 class="section-heading">Контактна інформація!</h2>
                <hr class="hr">
                <p class="mb-5">Маєте якісь побажання, або готові почати з нами наступний проект? Це чудово! Передзвоніть нам або надішліть нам електронний лист, і ми зв'яжемося з вами якомога швидше!</p>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 ml-auto text-center">
                <i class="fa fa-phone fa-2x mb-1 sr-contact"></i>
                <p>123-456-6789</p>
            </div>
            <div class="col-lg-4 mr-auto text-center">
                <i class="fa fa-envelope-o fa-2x mb-1 sr-contact"></i>
                <p>feedback@sample.com</p>
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <p class="mb-5">Або скористайтесь нашою формою зворотнього звязку</p>
            </div>
        </div>

        <h2 class="text-center" id="form-header"><i class="fa fa-envelope"></i> Форма зворотнього звязку</h2>
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-6 pb-5">
                @using (Html.BeginForm("SendMessage", "Message", FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="card border-primary rounded-0">
                        <div class="card-body p-3">
                            <div class="row">
                                @if (!User.Identity.IsAuthenticated)
                                {
                                    <div class="col-lg-6 ml-auto text-center">
                                        <div class="form-group">
                                            <div class="input-group mb-2">
                                                <div class="input-group-prepend">
                                                    <div class="input-group-text"><i class="fa fa-user text-info"></i></div>
                                                </div>

                                                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @id = "name", @placeholder = "Ім'я" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 mr-auto text-center">
                                        <div class="form-group">
                                            <div class="input-group mb-2">
                                                <div class="input-group-prepend">
                                                    <div class="input-group-text"><i class="fa fa-envelope text-info"></i></div>
                                                </div>
                                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @id = "email", @placeholder = "Електронна пошта", @type = "email" })
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                            <div class="form-group">
                                <div class="input-group mb-2">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text"><i class="fa fa-font text-info"></i></div>
                                    </div>
                                    @Html.TextBoxFor(model => model.Subject, new { @class = "form-control", @id = "subject", @placeholder = "Тема" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input-group mb-2">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text"><i class="fa fa-comment text-info"></i></div>
                                    </div>
                                    @Html.TextAreaFor(model => model.Body, new { @class = "form-control", @id = "body", @placeholder = "Повідомлення" })
                                </div>
                            </div>

                            <div class="text-center">
                                <input type="submit" value="Надіслати" class="btn btn-info btn-block rounded-0 py-2">
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>