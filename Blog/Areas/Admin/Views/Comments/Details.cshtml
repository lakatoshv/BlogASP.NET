@using Microsoft.AspNet.Identity
@model Blog.Areas.Admin.ViewModels.Posts.CommentWithPostViewModel

@{
    ViewBag.Title = "Details";
}


@Styles.Render("~/public/css/post.css")
@Styles.Render("~/public/css/post_responsive.css")
<!-- Main Content -->
@if (@Model.Post.Post != null)
{
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-10 mx-auto">
                <div class="post-preview">
                    <h2 class="post-title text-center">
                        @Model.Post.Post.Title
                    </h2>
                    <br />
                    @if (User.Identity.GetUserName().Equals(Model.Post.Post.Author))
                    {
                        <p class="pull-right">
                            @{
                                var edit = Url.Action("Edit", "Posts") + "/" + Model.Post.Post.Id;
                                var delete = Url.Action("Delete", "Posts");
                            }
                            <a type="button"
                               class="btn btn-sm text-white btn-primary"
                               href="@edit">
                                <i class="fa fa-edit"></i>
                                Редагувати
                            </a>

                            <button type="button"
                                    class="btn btn-sm text-white btn-danger"
                                    id="@(Model.Post.Post.Id)"
                                    onclick="setDeletePostValues(this.id)"
                                    data-toggle="modal"
                                    data-target="#delete-post">
                                <i class="fa fa-trash"></i>
                                Видалити
                            </button>
                        </p>
                    }
                    <img style="width: 100%; height: 300px;" src="@Model.Post.Post.ImgUrl" />
                    <h3 class="post-subtitle text-center">
                        @Model.Post.Post.Description
                    </h3>
                    <p class="post-meta">
                        <span><i class="fa fa-fw fa-eye"></i> @Model.Post.Post.Seen</span>
                        <span><i class="fa fa-fw fa-thumbs-up"></i> @Model.Post.Post.Likes</span>
                        <span><i class="fa fa-fw fa-thumbs-down"></i> @Model.Post.Post.Dislikes</span>
                    </p>
                    <p class="post-meta">
                        Теги: @Model.Post.Post.Tags
                    </p>
                    <p class="text-justify">@Model.Post.Post.Content</p>
                    @{ var authorPage = Url.Action("Details", "Profile", new { area = "" }) + "/" + Model.Post.Profile.Id; }
                    <p class="post-meta">
                        Написав: <b>
                            <a href="@authorPage">@Model.Post.Profile.FirstName @Model.Post.Profile.LastName</a>
                            <i>
                                20.11.2018
                            </i>
                        </b>
                    </p>
                </div>
            </div>
        </div>
    </div>
}
<div class="container">
    <!-- Similar Posts -->
    <div class="similar_posts">
        <!-- Comments -->
        <div class="comments">
            <div class="row">
                <div class="col-lg-12">
                    <div class="comments_container">
                        <ul class="comment_list">
                            <li class="comment">
                                <div class="comment_body">
                                    <div class="comment_panel d-flex flex-row align-items-center justify-content-start">
                                        <span><I class="fa fa-3x fa-user-circle"></I></span>
                                        <small class="post_meta">
                                            @{var commentatorPage = Url.Action("Details", "Profile", new { area = "" }) + "/" + Model.Comment.Profile.Id;}
                                            <a href="@commentatorPage" id="author@(Model.Comment.Comment.Id)">@Model.Comment.Comment.Author</a>
                                            <span>@Model.Comment.Comment.CreatedAt</span>
                                        </small>
                                    </div>
                                    <div class="comment_content">
                                        <p id="content@(Model.Comment.Comment.Id)">@Model.Comment.Comment.CommentBody</p>
                                        <p class="pull-right">
                                            @if (User.Identity.GetUserName().Equals(Model.Comment.Comment.Author))
                                            {
                                                <button type="button"
                                                        class="btn btn-sm text-white btn-primary"
                                                        id="@(Model.Comment.Comment.Id)"
                                                        onclick="setEditCommentValues(this.id)"
                                                        data-toggle="modal"
                                                        data-target="#edit-comment">
                                                    <i class="fa fa-edit"></i>
                                                    Редагувати
                                                </button>

                                                <button type="button"
                                                        class="btn btn-sm text-white btn-danger"
                                                        id="@(Model.Comment.Comment.Id)"
                                                        onclick="setDeleteCommentValues(this.id)"
                                                        data-toggle="modal"
                                                        data-target="#delete-comment">
                                                    <i class="fa fa-trash"></i>
                                                    Видалити
                                                </button>
                                            }
                                            <button type="button"
                                                    class="btn btn-sm btn-outline-success ml-2">
                                                <i class="fa fa-reply"></i>
                                                Відповісти
                                            </button>
                                        </p>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/public/plugins/jquery/jquery.js")
<script>
    function setEditCommentValues(id) {
        var author = $("#author" + id).text();
        var comment = $("#content" + id).text();
        $("#edit-id").val(id);
        $("#edit-author").val(author);
        $("#edit-content").val(comment);
    }
    function setDeleteCommentValues(id) {
        $("#delete-comment-id").val(id);
    }

    function setDeletePostValues(id) {
        $("#delete-post-id").val(id);
    }

    function deletePost(url) {
        var id = $("#delete-post-id").val();
        ajaxQuery(id, url);
    }

    function deleteComment(url) {
        var id = $("#delete-comment-id").val();
        ajaxQuery(id, url);
    }
    function ajaxQuery(id, url) {
        $.post(
            url + id,
            onAjaxSuccess
        );
    }
    function onAjaxSuccess(data) {
        location.reload();
    }
</script>

<div id="delete-comment" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Видалити цей коментар?</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <input type='hidden' id="delete-comment-id" />
            <div class="modal-footer">
                <button class="btn btn-sm btn-danger" type="button" id="confirm" onclick="deleteComment('/Comments/Delete/')">
                    <i class="fa fa-trash"></i>
                    Видалити
                </button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Скасувати</button>
            </div>
        </div>

    </div>
</div>

<div id="delete-post" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Видалити цей пост?</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <input type='hidden' id="delete-post-id" />
            <div class="modal-footer">
                <button class="btn btn-sm btn-danger" type="button" id="confirm" onclick="deletePost('/Posts/Delete/')">
                    <i class="fa fa-trash"></i>
                    Видалити
                </button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Скасувати</button>
            </div>
        </div>

    </div>
</div>