@model Blog.Data.Models.Comment

@{
    ViewBag.Title = "Створити  коментар";
}
@Styles.Render("~/public/css/post.css")
@Styles.Render("~/public/css/post_responsive.css")

<div class="container">
    <div class="row" data-ref="container">
        <div class="col-lg-12">
            <h2 class="text-center" id="form-header">Написати коментар</h2>
            @using (Html.BeginForm("Create", "Comments", new { area = "Admin" }, FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.Label("Пост:", htmlAttributes: new {@class = "control-label"})
                    @Html.DropDownList("PostId", null, htmlAttributes: new { @class = "custom-select" })
                </div>

                <div class="form-group">
                    @Html.Label("Короткий опис:", htmlAttributes: new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.CommentBody, new { @class = "form-control", @id = "comment-body", @placeholder = "Коментар" })
                </div>


            <input type="submit"
                   name="submit"
                   id="submit"
                   value="Додати"
                   class="btn btn-default">

            <button type="button"
                    class="btn btn-sm text-white btn-secondary">
                Скасувати
            </button>
            }
        </div>
    </div>
</div>
@Scripts.Render("~/public/plugins/jquery/jquery.js")
@Scripts.Render("~/public/plugins/tinymce/tinymce.min.js")
@Scripts.Render("~/public/js/form.js")