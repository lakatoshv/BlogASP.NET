@model Blog.Areas.Admin.ViewModels.Posts.CommentWithPostsViewModel

@{
    ViewBag.Title = "Створити  коментар";
}
@Styles.Render("~/public/css/post.css")
@Styles.Render("~/public/css/post_responsive.css")

<div class="container">
    <div class="row" data-ref="container">
        <div class="col-lg-12">
            <h2 class="text-center" id="form-header">Написати коментар</h2>
            @using (Html.BeginForm("Create", "Comments", new { area = "Admin" }, FormMethod.Post, new { role = "form" }))
            {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                <label for="title"
                       tag=""
                       class="optional">
                    Пост:
                </label>

                <select class="browser-default custom-select" name="Comment.PostID">
                    <option selected disabled value="">Виберіть пост</option>
                    @foreach (var post in @Model.Posts)
                    {
                    <option value="@post.Id">@post.Title</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label for="description"
                       tag=""
                       class="optional">
                    Короткий опис:
                </label>

                @Html.TextBoxFor(model => model.Comment.CommentBody, new { @class = "form-control", @id = "comment-body", @placeholder = "Коментар" })
            </div>


            <input type="submit"
                   name="submit"
                   id="submit"
                   value="Додати"
                   class="btn btn-default">

            <button type="button"
                    class="btn btn-sm text-white btn-secondary">
                Скасувати
            </button>
            }
        </div>
    </div>
</div>
@Scripts.Render("~/public/plugins/jquery/jquery.js")
@Scripts.Render("~/public/plugins/tinymce/tinymce.min.js")
<script>
    tinymce.init({
        selector: 'textarea',
        plugins: "media autolink autoresize autoresize charmap code textcolor colorpicker contextmenu directionality emoticons fullscreen help hr image imagetools importcss insertdatetime legacyoutput link lists noneditable pagebreak paste preview print save searchreplace tabfocus table template textcolor textpattern toc visualblocks visualchars wordcount",
        menubar: "insert tools view format edit file table",
        toolbar: "media charmap code forecolor backcolor ltr rtl emoticons fullscreen help image insertdatetime link numlist bullist pagebreak paste preview print save searchreplace table template textcolor toc visualblocks visualchars"
    });
</script>