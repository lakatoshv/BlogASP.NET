@using Blog.Core.Enums
@model Blog.Data.Models.Post
@{
    ViewBag.Title = "Створити пост";
}

@Styles.Render("~/public/css/post.css")
@Styles.Render("~/public/css/post_responsive.css")

<div class="container">
    <div class="row" data-ref="container">
        <div class="col-lg-12">
            <h2 class="text-center" id="form-header">Написати пост</h2>
            @using (Html.BeginForm("Create", "Posts", new { area = "Admin" }, FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    <label tag=""
                           class="">
                        Тема посту:
                    </label>

                    @Html.TextBoxFor(model => model.Title, new { @class = "form-control", @id = "title", @placeholder = "Тема посту" })
                </div>

                <div class="form-group">
                    <label tag=""
                           class="">
                        Короткий опис:
                    </label>

                    @Html.TextAreaFor(model => model.Description, new { @class = "form-control", @id = "author", @placeholder = "Опис" })
                </div>

                <div class="form-group">
                    <label tag=""
                           class="">
                        Пост:
                    </label>

                    @Html.TextAreaFor(model => model.Content, new { @class = "comment_text", @id = "content", @placeholder = "Текст посту" })
                </div>

                <label tag=""
                       class="">
                    Основна картинка
                </label>
                <div class="">
                    <div class="form-group">
                        <label tag=""
                               class="">
                            URL-адреса:
                        </label>

                        @Html.TextBoxFor(model => model.ImageUrl, new { @class = "form-control", @id = "title", @placeholder = "URL-адреса" })

                        <p>Наприклад: https://some_image.com/example.jpg</p>
                    </div>
                </div>

                @Html.TextBoxFor(model => model.Tags, new { @class = "form-control", @id = "tags", @placeholder = "Теги" })

                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    <label tag=""
                           class="">
                        Статус:
                    </label>

                    @Html.DropDownListFor(
                        m => m.Status,
                        EnumHelper.GetSelectList(typeof(Status)),
                        "Виберіть статус",
                        new { @class = "form-control" })
                </div>
                <input type="submit"
                       name="submit"
                       id="submit"
                       value="Додати"
                       class="btn btn-default">

                <button type="button"
                        class="btn btn-sm text-white btn-secondary">
                    Скасувати
                </button>
            }
        </div>
    </div>
</div>
@Scripts.Render("~/public/plugins/jquery/jquery.js")
@Scripts.Render("~/public/plugins/tinymce/tinymce.min.js")
<script>
    tinymce.init({
        selector: 'textarea',
        plugins: "media autolink autoresize autoresize charmap code textcolor colorpicker contextmenu directionality emoticons fullscreen help hr image imagetools importcss insertdatetime legacyoutput link lists noneditable pagebreak paste preview print save searchreplace tabfocus table template textcolor textpattern toc visualblocks visualchars wordcount",
        menubar: "insert tools view format edit file table",
        toolbar: "media charmap code forecolor backcolor ltr rtl emoticons fullscreen help image insertdatetime link numlist bullist pagebreak paste preview print save searchreplace table template textcolor toc visualblocks visualchars"
    });
</script>