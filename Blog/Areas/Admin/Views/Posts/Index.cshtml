@using Blog.Core.Enums
@model Blog.Services.Core.Dtos.Posts.PostsDto
@{
    ViewBag.Title = "Index";
}
@Scripts.Render("~/public/plugins/jquery/jquery.js")
<style type="text/css">
    .btn- {
        border: inherit;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-lg-12 col-md-12 mx-auto">
            @{
                var createPost = Url.Action("Create", "Posts");
                var posts = Model.Posts;
            }
            <a href="@createPost" class="btn btn-light">Написати пост</a>
            <span></span>

            <!-- Area Chart Example-->
            <div class="card mb-3">
                <div class="card-header">
                    <i class="fa fa-chart-area"></i>
                    Створення постів
                </div>
                <div class="card-body">
                    <canvas id="postsChart" width="100%" height="30"></canvas>
                </div>
                <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
            </div>

            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable">
                    <thead>
                        <tr>
                            <th width="20%"><b>Назва:</b></th>
                            @if (!Model.OnlyWithCommentsInfo)
                            {
                                <th width="5%"><b>Теги:</b></th>
                                <th><b>Автор:</b></th>
                                <th><b>Статус:</b></th>
                                <th><b>К-сть переглядів:</b></th>
                                <th><b>К-сть лайків:</b></th>
                                <th><b>К-сть дизлайків:</b></th>
                            }
                            <th><b>К-сть коментарів:</b></th>
                            @if (!Model.OnlyWithCommentsInfo)
                            {
                                <th><b>Дата створення:</b></th>
                            }
                            <th></th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th width="20%"><b>Назва:</b></th>
                            @if (!Model.OnlyWithCommentsInfo)
                            {
                                <th width="5%"><b>Теги:</b></th>
                                <th><b>Автор:</b></th>
                                <th><b>Статус:</b></th>
                                <th><b>К-сть переглядів:</b></th>
                                <th><b>К-сть лайків:</b></th>
                                <th><b>К-сть дизлайків:</b></th>
                            }
                            <th><b>К-сть коментарів:</b></th>
                            @if (!Model.OnlyWithCommentsInfo)
                            {
                                <th><b>Дата створення:</b></th>
                            }
                            <th></th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in posts)
                        {
                            <tr>
                                <td>
                                    @{
                                        var pathUrl = Url.Action("Show", "Posts", new { area = "" }) + "/" + item.Id;
                                    }
                                    <a href="@pathUrl" title="@item.Title">@item.Title</a>
                                </td>
                                @if (!Model.OnlyWithCommentsInfo)
                                {
                                    <td>@item.Tags</td>
                                    <td>
                                        @{ var authorPage = item.Author != null ? Url.Action("Details", "Profile", new { area = "" }) + "/" + item.Author.Profile.Id : ""; }
                                        <a href="@authorPage" title="@item.Author?.FirstName @item.Author?.LastName">
                                            @if (item.Author != null)
                                            {
                                                @item.Author.FirstName
                                                @item.Author.LastName
                                            }
                                        </a>
                                    </td>
                                    <td>
                                        @Html.DropDownListFor(
                                            m => item.Status,
                                            EnumHelper.GetSelectList(typeof(Status)),
                                            new { @class = "form-control", @id = "status-" + item.Id })
                                        <button class="btn btn-sm btn-success btn-@item.Id" style="display: none" onclick="changeStatus(@item.Id)">Зберегти</button>
                                    </td>
                                    <td>@item.Seen</td>
                                    <td>@item.Likes</td>
                                    <td>@item.Dislikes</td>
                                }
                                <td>
                                    @{ var commentsPage = item.Author != null ? Url.Action("PostComments", "Comments", new { area = "Admin", postId = item.Id }) : ""; }
                                    <a href="@commentsPage" title="Переглянути коментарі до посту">@item.Comments.Count</a>
                                </td>
                                @if (!Model.OnlyWithCommentsInfo)
                                {
                                    <td>@item.CreatedAt</td>
                                }
                                <td data-th="">
                                    @{
                                        var edit = Url.Action("Edit", "Posts") + "/" + item.Id;
                                        Url.Action("Delete", "Posts");
                                    }
                                    <a type="button"
                                       class="btn btn-sm text-white btn-primary"
                                       href="@edit">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                    <button type="button"
                                            class="btn btn-sm text-white btn-danger"
                                            id="@item.Id"
                                            onclick="setDeletePostValues(this.id)"
                                            data-toggle="modal"
                                            data-target="#delete-post">
                                        <i class="fa fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div id="delete-post" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Видалити цей пост?</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <input type='hidden' id="delete-id" />
            <div class="modal-footer">
                <button class="btn btn-sm btn-danger" type="button" id="confirm" onclick="deletePost('Posts/Delete/')">
                    <i class="fa fa-trash"></i>
                    Видалити
                </button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Скасувати</button>
            </div>
        </div>

    </div>
</div>

<script>
    function setDeletePostValues(id) {
        $("#delete-id").val(id);
    }

    function deletePost(url) {
        var id = $("#delete-id").val();
        ajaxQuery(id, url);
    }
    function ajaxQuery(id, url) {
        $.post(
            url + id,
            onAjaxSuccess
        );
    }
    function onAjaxSuccess() {
        location.reload();
    }

    $("select").change(function () {
        $(this).next("button").show();
    });
    function changeStatus(id) {
        var value = $("#status-" + id).val();
        var url = "@Url.Action("ChangeStatus", "Posts")" + "/" + id + "?status=" + value;
        ajaxQuery('', url);
    }
</script>