<div class="card mb-3">
    <div class="card-header">
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                @Html.ActionLink("Детальніше", "Index", "Posts", new { area = "Admin" }, new { @class = "navbar-brand" })
            </li>
        </ul>
    </div>
    <div class="card-body">
