@model Blog.Areas.Admin.ViewModels.DashboardViewModel

@{
    ViewBag.Title = "Index";
}
<div class="container-fluid">
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Overview</li>
    </ol>

    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#users">Користувачі</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#posts">Пости</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#messages">Повідомлення</a>
        </li>
    </ul>

    <div class="tab-content">
        <div class="tab-pane active" id="users">
            <div class="col-12 mb-3">
                <div class="card text-white bg-success h-100">
                    <div class="card-body">
                        <div class="">
                            <i class="fa fa-fw fa-user"></i>
                        </div>
                        <div class="mr-5">123 нових користувачів!</div>
                    </div>
                    <a class="card-footer text-white clearfix small" href="#">
                        <span class="float-left">View Details</span>
                        <span class="float-right">
                            <i class="fa fa-angle-right"></i>
                        </span>
                    </a>
                </div>
            </div>

            @{
                Html.RenderPartial("Tables/_RolesTable");
            }

            @{
                Html.RenderPartial("_ActivityChart", "Активність користувачів");
            }
            @{
                Html.RenderPartial("Tables/_UsersTable", Model.Users);
            }
        </div>
        <div class="tab-pane" id="posts">
            <div class="row">
                <div class="col-xl-3 col-sm-6 mb-3">
                    <div class="card text-white bg-danger h-100">
                        <div class="card-body">
                            <div class="">
                                <i class="fa fa-fw fa-life-ring"></i>
                            </div>
                            <div class="mr-5">13 нові теги!</div>
                        </div>
                        <a class="card-footer text-white clearfix small" href="#">
                            <span class="float-left">View Details</span>
                            <span class="float-right">
                                <i class="fa fa-angle-right"></i>
                            </span>
                        </a>
                    </div>
                </div>

                <div class="col-xl-3 col-sm-6 mb-3">
                    <div class="card text-white bg-success h-100">
                        <div class="card-body">
                            <div class="">
                                <i class="fa fa-fw fa-user"></i>
                            </div>
                            <div class="mr-5">1 нова категорія!</div>
                        </div>
                        <a class="card-footer text-white clearfix small" href="#">
                            <span class="float-left">View Details</span>
                            <span class="float-right">
                                <i class="fa fa-angle-right"></i>
                            </span>
                        </a>
                    </div>
                </div>

                <div class="col-xl-3 col-sm-6 mb-3">
                    <div class="card text-white bg-primary h-100">
                        <div class="card-body">
                            <div class="">
                                <i class="fa fa-fw fa-comments"></i>
                            </div>
                            <div class="mr-5">@Html.ActionLink("26 нових постів!", "Index", "Posts", new { area = "Admin" }, new { @class = "navbar-brand text-white" })</div>
                        </div>
                        <a class="card-footer text-white clearfix small" href="#">
                            <span class="float-left">View Details</span>
                            <span class="float-right">
                                <i class="fa fa-angle-right"></i>
                            </span>
                        </a>
                    </div>
                </div>

                <div class="col-xl-3 col-sm-6 mb-3">
                    <div class="card text-white bg-warning h-100">
                        <div class="card-body">
                            <div class="">
                                <i class="fa fa-fw fa-list"></i>
                            </div>
                            <div class="mr-5">@Html.ActionLink("11 нових коментарів!", "Index", "Comments", new { area = "Admin" }, new { @class = "navbar-brand text-white" })</div>
                        </div>
                        <a class="card-footer text-white clearfix small" href="#">
                            <span class="float-left">View Details</span>
                            <span class="float-right">
                                <i class="fa fa-angle-right"></i>
                            </span>
                        </a>
                    </div>
                </div>
            </div>

            @{
                Html.RenderPartial("_ActivityChart", "Створення категорій");
            }
            @{
                Html.RenderPartial("Tables/_CategoriesTable");
            }

            @{
                Html.RenderPartial("_ActivityChart", "Створення постів");
            }
            @{
                Html.RenderPartial("Tables/_PostsTable", Model.Posts);
            }

            @{
                Html.RenderPartial("_ActivityChart", "Створення коментарів");
            }
            @{
                Html.RenderPartial("Tables/_PostsTable", Model.Posts);
            }

            @{
                Html.RenderPartial("_ActivityChart", "Створення тегів");
            }
            @{
                Html.RenderPartial("Tables/_PostsTable", Model.Posts);
            }
        </div>

        <div class="tab-pane" id="messages">Messages</div>
    </div>
</div>