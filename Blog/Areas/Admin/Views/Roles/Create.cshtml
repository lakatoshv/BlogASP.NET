@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole
@{
    ViewBag.Title = "Додати нову роль";
}

<div class="container">
    <div class="row" data-ref="container">
        <div class="col-lg-12">
            <h2 class="text-center" id="form-header">Додати нову роль</h2>
            @using (Html.BeginForm("Create", "Roles", new { area = "Admin" }, FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    <label tag=""
                           class="">
                        Роль:
                    </label>

                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @id = "title", @placeholder = "Роль" })
                </div>

                <input type="submit"
                       name="submit"
                       id="submit"
                       value="Додати"
                       class="btn btn-default">

                <button type="button"
                        class="btn btn-sm text-white btn-secondary">
                    Скасувати
                </button>
            }
        </div>
    </div>
</div>
@Scripts.Render("~/public/plugins/jquery/jquery.js")
@Scripts.Render("~/public/plugins/tinymce/tinymce.min.js")
@Scripts.Render("~/public/js/form.js")